form.form(action='a.php' method='post' name='popup-form')
	.form__wrapper
		.input
			label.input__label.input__label-name(for='input-name') Имя
			input.input__field#input-name(type='text' name='name' placeholder='Введите ваше имя')
		.input
			label.input__label(for='input-adult') Количество взрослых 
			input.input__field.input__field-number#input-adult(type='number' name='adult' placeholder='2')
		.input
			label.input__label(for='input-child') Количество детей 
			input.input__field.input__field-number#input-child(type='number' name='child' placeholder='3')
		.input
			label.input__label.input__label-phone(for='input-phone') Телефон
			input.input__field#input-phone(type='tel' name='phone' placeholder='+7(495)555-55-55')
		.form__wrapper
			button.btn-popup.btn-popup-close Отменить
			input.btn-popup.btn-popup_active(type='submit' value='Подтверждаю участие')